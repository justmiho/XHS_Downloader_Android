<resources>
    <!-- Compose/miuix 基础主题，去掉原生 ActionBar 交由 TopAppBar 控制 -->
    <style name="Theme.MiuixApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- 兼容旧版 Activity 的 AppCompat 顶栏 -->
    <style name="Theme.MiuixCompatActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
